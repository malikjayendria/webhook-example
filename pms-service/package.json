{
  "name": "pms-service",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node build/server.js",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:revert": "ts-node src/db/revert.ts",
    "db:sync": "ts-node src/db/sync.ts",
    "db:reset": "npm run db:revert && npm run db:migrate",
    "db:truncate": "ts-node src/db/truncate.ts",
    "clean": "rm -rf node_modules dist build",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",
    "type-check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mysql2": "^3.14.4",
    "pino": "^9.9.1",
    "pino-pretty": "^13.1.1",
    "tslib": "^2.8.1",
    "typeorm": "^0.3.26",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
